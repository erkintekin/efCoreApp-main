@model IEnumerable<Kurs>
 
@{
    ViewData["Title"] = "Kurs Listesi";
}

<h2>Kurs Listesi</h2>

<hr>

<table class="table table-hover table-dark table-striped table-bordered">
<thead>
    <tr>
        <th style="width: 150px;">@Html.DisplayNameFor(m => m.KursId)</th>
        <th>Kurs Adı</th>
        <th>Başlık</th>
        <th style="width: 150px;"></th>
    </tr>
</thead>

<tbody>
    @foreach(var item in @Model)
    {
        <tr>
            <td>@item.KursId</td>
            <td>@item.Baslik</td>
        
            <td class="text-center">

                <a href="/Kurs/Edit/@item.KursId" class="btn btn-sm btn-primary">Edit</a>

                    <a asp-action="Delete" asp-controller="Kurs" asp-route-id="@item.KursId" class="btn btn-danger">Sil</a>

            </td>
        </tr>
    }
</tbody>
</table>