@model IEnumerable<Kurs>

    @{
        ViewData["Title"] = "Kurs Listesi";
    }

    <h2>Kurs Listesi</h2>
    <hr>
<table class="table table-hover table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.KursId)</th>
            <th>@Html.DisplayNameFor(m => m.Baslik)</th>
            <th>@Html.DisplayNameFor(m => m.Ogretmen.AdSoyad)</th>
            <th style="width: 150px; " ></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <td>@item.KursId</td>
                <td>@item.Baslik</td>
                <td>@item.Ogretmen.AdSoyad</td> 
                <td class="text-center">
                    <a asp-controller="Kurs" asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Kurs" asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>